<% @pending_requests.each do |p| %>
  <% if @user == current_user %>
  <%= p.name %> sent you a friend request.
  <%= confirm_btn(p) %>
  <% end %>
<% end %>
<%= confirm_friendship_btn(@user) %>
<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
